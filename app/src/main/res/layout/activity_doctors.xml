<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
     android:layout_marginLeft="14dp"
     android:layout_width="345dp"
     android:text="DOCTORS REGISTRATION"
     android:textStyle="bold"
     android:textSize="24sp"
     android:textColor="@android:color/holo_blue_dark"
     android:layout_marginTop="3dp"
     android:layout_height="50dp"/>
    <EditText
        android:id="@+id/doctor_name"
        android:layout_width="327dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:hint="Doctors Name"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/medical_id"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Medical Id"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />


    <AutoCompleteTextView
        android:id="@+id/specialisation"
        android:layout_width="327dp"
        android:hint="Specialisation"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/doctor_idnumber"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="Doctors ID Number"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:inputType="number"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/doctor_phone"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="Doctors Phone Number"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <AutoCompleteTextView
        android:id="@+id/doctor_current_location"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="Resident County "
        android:inputType="text"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />

    <EditText
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="Desired Password"
        android:id="@+id/pass"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="Confirm Desired Password"
        android:id="@+id/cpass"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/doctor_registration"
        android:layout_width="wrap_content"
        android:text="Register"
        android:background="#fff1c0"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/doctor_proceed"
        android:layout_width="wrap_content"
        android:text="IF YOU ARE ALREADY REGISTERED CLICK HERE"
        android:background="#fff1c0"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>


</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginLeft="14dp"
        android:layout_width="345dp"
        android:text="USER'S REGISTRATION"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="3dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/patient_name"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="User Id Number"
        android:id="@+id/patient_id"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:inputType="number"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="User Location"
        android:id="@+id/patient_location"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <Button
        android:id="@+id/user_registration"
        android:layout_width="wrap_content"
        android:text="Register"
        android:background="#fff1c0"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:text="IF YOU ARE REGISTERED CLICK PROCEED THEN ENTER YOUR MEDICAL ID"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/user_proceed"
        android:layout_width="wrap_content"
        android:text="Proceed"
        android:background="#fff1c0"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

</LinearLayout>
</ScrollView>
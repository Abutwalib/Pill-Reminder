<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReminderAdd">
    <TextView
        android:layout_marginLeft="14dp"
        android:layout_width="345dp"
        android:text="@string/add_reminder"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="3dp"
        android:layout_height="50dp"/>

    <Button
        android:layout_marginTop="6dp"
        android:id="@+id/select_pill_image"
        android:layout_width="wrap_content"
        android:text=" SELECT PILL/CAPSULE IMAGE"
        android:padding="4dp"
        android:shadowRadius="@android:integer/config_longAnimTime"
        android:background="#fff1c0"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp" />
    <EditText
        android:id="@+id/pill_name"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="Pill/Capsule Name"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/number_of_pills"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="No Pill/Capsule Per Session"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:inputType="number"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/number_of_sessions"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="No of Times to take pill per day"
        android:layout_gravity="center_horizontal"
        android:textSize="23sp"
        android:inputType="number"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/pill_desc"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:hint="Pill Description"
        android:layout_gravity="start"
        android:textSize="23sp"
        android:inputType="textMultiLine|textCapSentences"
        android:minHeight="85dp"
        android:textStyle="bold|italic"
        android:textColor="#bc1d"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="8dp"
        />
    <Button
        android:id="@+id/add_reminder"
        android:layout_width="wrap_content"
        android:text="add Reminder"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_action_add" />
</LinearLayout>
</ScrollView>